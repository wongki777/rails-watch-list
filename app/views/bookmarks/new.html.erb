<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment, placeholder: 'Enter a comment here' %>
        <%= f.association :movie %>
        <%= f.association :list %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
